---
extends: default

rules:
  line-length:
    max: 360
    level: warning
  indentation:
    spaces: consistent
    indent-sequences: false
    check-multi-line-strings: false
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  braces:
    max-spaces-inside: 1
  octal-values:
    forbid-explicit-octal: true
    forbid-implicit-octal: true

ignore:
- ".venv/**"
- ".ansible/**"
